    <div class="row">
        <div class="col-lg-12">
            <div class="box" id="incomeAndExpensesChart">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'income_and_expenses'|_ }}</h3>
                </div>
                <div class="box-body">
